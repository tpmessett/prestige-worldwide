  <div class="row cols-1 row-cols-md-2 g-4">
    <% @yachts.each do |yacht| %>
    <div class="col-6">
      <div class="yacht card">
        <%= link_to yacht_path(yacht) do %>
        <%= cl_image_tag yacht.photo.key, crop: :fill, class: "card-image"%>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= yacht.yacht_name %></h5>
          <p class="card-text"><%= yacht.description %></p>
          <p class="view_yacht"><%= link_to "View Yacht", yacht_path(yacht), class: "btn btn-outline-success" %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
